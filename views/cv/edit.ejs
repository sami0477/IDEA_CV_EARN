<div class="container">
    
    <h1>Edit New CV</h1>
    <form action="/users/cv/<%= resume.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label for= "cv_name">Name</label>
                    <input value="<%= resume.cv_name %>" name="resume[cv_name]" type="text" class="form-control">
                </div>
                <div class="col-3">
                    <label for= "dob">Date of Birth</label>
                    <input value="<%= resume.dob %>" name="resume[dob]" type="date" class="form-control">
                </div>
                <div class="col-3">
                    <label for= "number">Mobile Number</label>
                    <input value="<%= resume.number %>" name="resume[number]" type="tel" class="form-control">
                </div>
                <div class="col-3">
                    <label for= "email">Email</label>
                    <input value="<%= resume.email %>" name="resume[email]" type="email" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for= "address">Address</label>
            <input value="<%= resume.address %>" name="resume[address]" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for= "bio">About Me</label> <br>
            <textarea name="resume[bio]"><%= resume.bio %></textarea>
        </div>
        <div class="form-group">
            <label for= "experience">Experience</label>
            <input value="<%= resume.experience %>" name="resume[experience]" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label for= "education">Education</label>
            <input value="<%= resume.education %>" name="resume[education]" type="text" class="form-control">
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label for= "skills">Skills</label>
                    <input value="<%= resume.skills %>" name="resume[skills]" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <label for= "languages">Languages</label>
                    <input value="<%= resume.languages %>" name="resume[languages]" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <label for= "interests">Interests</label>
                    <input value="<%= resume.interests %>" name="resume[interests]" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for= "certifications">Certifications</label>
                    <input value="<%= resume.certifications %>" name="resume[certifications]" type="text" class="form-control">
                </div>
                <div class="col-3">
                    <label for= "image">Image</label>
                    <input value="<%= resume.image %>" name="resume[image]" type="file" class="btn form-control">
                </div>
            </div>
        </div>

        <br><br>
               
        <div class="form-group">
            <input name="submit" type="submit" class="btn btn-primary form-control">
        </div>         
 
    </form>
        
</div>
